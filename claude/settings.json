{
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(*~/.claude/.ignore/tts*)"
    ],
    "additionalDirectories": [
      "/Applications/Cursor.app/Contents/Resources/app/bin"
    ]
  },
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true,
    "swift-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/chaseadams/.vibecraft/hooks/vibecraft-hook.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/chaseadams/.vibecraft/hooks/vibecraft-hook.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/chaseadams/.vibecraft/hooks/vibecraft-hook.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "node /Users/chaseadams/.claude/hooks/tts.js"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/chaseadams/.vibecraft/hooks/vibecraft-hook.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/chaseadams/.vibecraft/hooks/vibecraft-hook.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/chaseadams/.vibecraft/hooks/vibecraft-hook.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/chaseadams/.vibecraft/hooks/vibecraft-hook.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/chaseadams/.vibecraft/hooks/vibecraft-hook.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}